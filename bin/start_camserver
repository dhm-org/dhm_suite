#!/bin/bash

### Open GUI?
gui=1

## Server Ports
FRAME_PORT=2000
COMMAND_PORT=2001
TELEMETRY_PORT=2002

### Data output directory
DATA_DIR=~/Desktop

### Trigger Source
TRIGGER="-x Line2"
#TRIGGER=  # Leave blank for freerun

### Enable camserver logging on startup
ENA_LOGGING="-d"  #-d is used to start camera server with logging disabled
#ENA_LOGGING="-e"  #-e is used to start camera server with logging enable

echo "Frame Port=$FRAME_PORT"
echo "Command Port=$COMMAND_PORT"
echo "Telemetry Port=$TELEMETRY_PORT"
echo "Data Directory=$DATA_DIR"
echo "Trigger=$TRIGGER"
echo "Enable/disable Logging=$ENA_LOGGING"

xterm -e /opt/DHM/bin/camserver $ENA_LOGGING -fp $FRAME_PORT -cp $COMMAND_PORT -tp $TELEMETRY_PORT $TRIGGER -l $DATA_DIR &

if [ $gui -eq 1 ]
then
    cd /opt/DHM/dhm_gui
    xterm -e python3 ./dhmxc.py -f $FRAME_PORT -c $COMMAND_PORT -t $TELEMETRY_PORT &
fi

