#!/bin/bash

### Open GUI?
gui=1

## Server Ports
FRAME_PORT=2000
COMMAND_PORT=2001
TELEMETRY_PORT=2002

### Data output directory
DATA_DIR=~/Desktop

### Trigger Source
TRIGGER=-x Line2
#TRIGGER=  # Leave blank for freerun

xterm -e /opt/DHM/bin/camserver -d -fp $FRAME_PORT -cp $COMMAND_PORT -tp $TELEMETRY_PORT $TRIGGER -l $DATA_DIR &

cd /opt/DHM/dhm_gui
xterm -e python3 ./dhmxc.py -f $FRAME_PORT -c $COMMAND_PORT -t $TELEMETRY_PORT &
